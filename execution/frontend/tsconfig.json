{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ]
}